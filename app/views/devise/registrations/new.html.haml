.row.devise-row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-body
        %h2.devise-header
          Sign Up
          %small to get some stars
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form") do |f|
          = devise_error_messages!
          .form-group
            = f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name"
          .form-group
            = f.email_field :email, :class => "form-control", :placeholder => "Email"
          .form-group
            = f.password_field :password, :class => "form-control", :placeholder => "Password"
          .form-group
            = f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
          %div= f.submit "Sign up", class: "btn full-width"
    = render "devise/shared/links"
